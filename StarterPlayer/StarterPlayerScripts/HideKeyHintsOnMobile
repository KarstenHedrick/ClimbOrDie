local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer
local gui = player:WaitForChild("PlayerGui")

if UserInputService.TouchEnabled and not UserInputService.KeyboardEnabled then
	-- Hide all key hint images on mobile
	local function hideKeyHints(container)
		if not container then return end
		for _, guiObj in pairs(container:GetDescendants()) do
			if guiObj:IsA("ImageLabel") and guiObj.Name == "FKey" or guiObj.Name == "EKey" then
				guiObj.Visible = false
			end
		end
	end

	gui.ChildAdded:Connect(function(child)
		task.wait() -- slight delay to allow structure to load
		hideKeyHints(child)
	end)

	for _, screenGui in pairs(gui:GetChildren()) do
		hideKeyHints(screenGui)
	end
end
